# Django Settings
SECRET_KEY=django-insecure-dev-key-change-in-production
DEBUG=True
ENVIRONMENT=local

# Database (optional - uses SQLite by default if not set)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# xAI API (for Grok card analysis and RAG)
XAI_API_KEY=your-xai-api-key-here

# xAI Management API Key (required for creating/managing collections)
# Get this from https://console.x.ai/ - it's different from XAI_API_KEY
XAI_MANAGEMENT_API_KEY=your-xai-management-api-key-here

# xAI Collections (for RAG - upload PDFs first to get this ID)
# Run: python manage.py upload_card_pdfs --create-collection "Card Benefits" --pdf-dir /path/to/pdfs
CARD_BENEFITS_COLLECTION_ID=

# Google Places API (for nearby stores)
GOOGLE_PLACES_API_KEY=your-google-places-api-key-here

# Twilio (for phone verification)
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=your-twilio-phone-number-here
